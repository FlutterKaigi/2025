{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "supabase-start",
      "type": "shell",
      "command": "supabase",
      "args": [
        "start",
        "--workdir",
        "${workspaceFolder}/supabase"
      ]
    },
    {
      "label": "supabase-stop",
      "type": "shell",
      "command": "supabase",
      "args": [
        "stop",
        "--workdir",
        "${workspaceFolder}/supabase"
      ]
    },
    {
      "label": "supabase-status",
      "type": "shell",
      "command": "supabase",
      "args": [
        "status",
        "--workdir",
        "${workspaceFolder}/supabase"
      ]
    },
    {
      "label": "supabase-migration-new",
      "type": "shell",
      "command": "supabase",
      "args": [
        "migration",
        "new",
        "${input:migrationName}",
        "--workdir",
        "${workspaceFolder}/supabase"
      ]
    },
    {
      "label": "supabase-migration-up",
      "type": "shell",
      "command": "supabase",
      "args": [
        "migration",
        "up",
        "--local",
        "--workdir",
        "${workspaceFolder}/supabase"
      ]
    },
    {
      "label": "supabase-db-reset",
      "type": "shell",
      "command": "supabase",
      "args": [
        "db",
        "reset",
        "--workdir",
        "${workspaceFolder}/supabase"
      ]
    },
    {
      "label": "supabase-db-test",
      "type": "shell",
      "command": "supabase",
      "args": [
        "db",
        "test",
        "--workdir",
        "${workspaceFolder}/supabase"
      ]
    },
    {
      "label": "supabase-functions-serve",
      "type": "shell",
      "command": "supabase",
      "args": [
        "functions",
        "serve",
        "--workdir",
        "${workspaceFolder}/supabase"
      ]
    }
  ],
  "inputs": [
    {
      "id": "migrationName",
      "type": "promptString",
      "description": "Migration name"
    }
  ]
}
