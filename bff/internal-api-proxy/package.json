{
  "name": "@2025/internal-api-proxy",
  "type": "module",
  "scripts": {
    "format": "biome check --write",
    "check-types": "tsc --noEmit",
    "dev": "wrangler dev -e staging",
    "deploy:staging": "wrangler deploy -e staging --minify",
    "deploy:production": "wrangler deploy -e production --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings -e staging"
  },
  "dependencies": {
    "@2025/database": "workspace:*",
    "@2025/payment-workflow-internal-api": "workspace:*",
    "@hono/standard-validator": "^0.1.5",
    "@hono/valibot-validator": "^0.5.3",
    "@scalar/hono-api-reference": "^0.9.18",
    "@valibot/to-json-schema": "^1.3.0",
    "hono": "^4.9.7",
    "hono-openapi": "^1.0.8",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "tsx": "^4.20.5",
    "wrangler": "^4.37.1"
  }
}
