{
  "name": "workflows-starter",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "format": "biome check --write",
    "check-types": "tsc --noEmit",
    "dev": "wrangler dev -e staging",
    "deploy:staging": "wrangler deploy -e staging --minify",
    "deploy:production": "wrangler deploy -e production --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings -e staging",
    "build": "git clean -xdf dist && tsc"
  },
  "dependencies": {
    "@2025/database": "workspace:*",
    "@hono/valibot-validator": "^0.5.3",
    "@scalar/hono-api-reference": "^0.9.12",
    "@valibot/to-json-schema": "^1.3.0",
    "drizzle-orm": "^0.44.3",
    "hono": "^4.8.5",
    "hono-openapi": "^0.4.8",
    "pg": "^8.16.3",
    "stripe": "^18.3.0",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/pg": "^8.15.4",
    "typescript": "^5.8.3",
    "wrangler": "^4.26.0"
  }
}
