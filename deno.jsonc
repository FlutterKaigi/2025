{
  "fmt": {
    "include": [
      "**/*.json",
      "**/*.jsonc",
      "**/*.yaml",
      "**/*.yml",
      "**/*.md",
      // 隠しディレクトリ内も対象に含める
      ".*/**/*.json",
      ".*/**/*.jsonc",
      ".*/**/*.yaml",
      ".*/**/*.yml",
      ".*/**/*.md"
    ],
    "exclude": [
      "**/ios/Runner/**",
      "**/macos/Runner/**"
    ],
    "indentWidth": 2,
    "lineWidth": 120,
    "proseWrap": "preserve"
  }
}
